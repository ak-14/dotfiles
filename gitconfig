[push]
  default = matching
  followTags = true
[diff]
  tool = vimdiff
  renames = copies
  indentHeuristic = true
[diff "bin"]
  textconv = hexdump -v -C
[difftool]
  prompt = false
[merge]
  tool = vimdiff
  conflictstyle = diff3
  log = true
[mergetool]
  prompt = false
[core]
  excludesfile = ~/.gitignore_global
[alias]
  s = status -s
  l = log --pretty=oneline --graph --abbrev-commit
  last = log -1 HEAD
  amend = commit --amend --reuse-message=HEAD
  uncommit = reset HEAD~
  wip = !git add -A && git commit -m 'wip'
[help]
  autocorrect = 0
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
